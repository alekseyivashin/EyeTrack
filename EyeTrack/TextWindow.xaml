<Window x:Class="EyeTrack.TextWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EyeTrack"
        mc:Ignorable="d"
        Title="TextWindow" ResizeMode="NoResize"
        Height="{Binding SystemParameters.PrimaryScreenHeight}"
        Width="{Binding SystemParameters.PrimaryScreenWidth}" WindowStyle="None" WindowStartupLocation="CenterScreen" WindowState="Maximized" KeyUp="Window_KeyUp">
    <Grid>
        <TextBox x:Name="TextBox" HorizontalAlignment="Center" Height="700" TextWrapping="Wrap" VerticalAlignment="Center" Width="1000" FontSize="30" FontFamily="Courier New" TextAlignment="Justify" TextBlock.LineHeight="40" TextBlock.LineStackingStrategy="BlockLineHeight"/>
        <Label x:Name="MessageLabel" Content="Нажмите клавишу &quot;Пробел&quot; и начните читать" HorizontalContentAlignment="Center" Height="43" Width="696" FontSize="24" VerticalContentAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Center"/>

    </Grid>
</Window>
